<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        androidx:layout_constraintBottom_toBottomOf="parent"
        androidx:layout_constraintEnd_toEndOf="parent"
        androidx:layout_constraintStart_toStartOf="parent"
        androidx:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        androidx:layout_constraintBottom_toTopOf="@id/backToLastButton"
        androidx:layout_constraintEnd_toEndOf="parent"
        androidx:layout_constraintStart_toStartOf="parent"
        androidx:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToLastButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/back_to_history"
        androidx:layout_constraintBottom_toBottomOf="parent"
        androidx:layout_constraintEnd_toStartOf="@id/changeTapNameButton"
        androidx:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/changeTapNameButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/change_tap_name"
        androidx:layout_constraintBottom_toBottomOf="parent"
        androidx:layout_constraintEnd_toEndOf="parent"
        androidx:layout_constraintStart_toEndOf="@id/backToLastButton" />
</androidx.constraintlayout.widget.ConstraintLayout>